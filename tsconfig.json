{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"]
        },
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": ["es6", "es2018", "ES2019", "ES2020"],
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "allowJs": true
    },
    "exclude": ["node_modules", ".vscode-test", "build", "out", "tmp"]
}
